{
    "name": "masterton/spider",
    "description": "A simple crawler",
    "keywords": ["spider"],
    "homepage": "http://github.com/master/spider",
    "license": "MIT",
    "authors": [
        {
            "name": "Masterton",
            "email": "zhengcloud@foxmail.com",
            "homepage": "http://www.zhengss.com"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "owner888/phpspider": "^2.1"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload": {
        "psr-4": {
            "App\\Controllers\\": "src/controllers/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
	"scripts": {
        "start": "php -S 0.0.0.0:8080 -t public public/index.php",
        "test": "phpunit"
	},
    "repositories": {
        "packagist": {
            "type": "composer",
            "url": "https://packagist.phpcomposer.com"
        }
    }
}
